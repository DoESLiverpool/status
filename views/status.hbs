    <div class="row">
            <div class="col s12 m6 offset-m3">
                <div class="card {{#if status/offline}} tooltipped {{/if}} waves-effect waves-block waves-light" {{#if status/offline}} data-position="bottom" data-delay="100" data-tooltip="Last Seen: {{status/offline_date}}" {{/if}} >
                    <div class="card-content">
                        <span class="card-title black-text">{{status/friendly-name}}</span>
                        {{#if status/offline}}
                            <h3 class="red-text">Offline</h3>
                        {{else}}
                            <h3 class="green-text">Online</h3>
                        {{/if}}
                    </div>
                </div>
            </div>
    </div>
{{#if issues}}
    <div class="row">
        <span class="white-text">Current Issues:</span>
        <h6 class="green-text">Open: {{issues/open_count}}</h6>
        <h6 class="red-text">Closed: {{issues/closed_count}}</h6>
    </div>
{{/if}}